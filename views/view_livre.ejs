<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>
<body>
    <div>

        <h1>Liste des Livres</h1>

        <br><br>
        <form action="/livres" method="POST">
            <input type="text" name="titre" placeholder="Titre" required>
            <input type="text" name="auteur" required placeholder="Auteur">
            <input type="date" name="date" placeholder="date" required>
            <input type="resume" name="resume" required placeholder="resume">
            <button type="submit">Ajouter Livre</button>
        </form>

        <div class="res">
        <ul>
            <% if (livres && livres.length > 0) { %>
                <% livres.forEach(livre => { %>
                    <li>
                        <a href="/livres/edit/<%= livre._id %>">
                            <%= livre.titre %> - <%= livre.auteur %>
                        </a>
                        <div>
                            <form action="/livres/<%= livre._id %>" method="POST">
                                <button type="submit">Supprimer</button>
                            </form>
        
                        </div>
                    </li>
                <% }); %>
            <% } else { %>
                <li>Aucun livre trouvé.</li>
            <% } %>
        </ul>
        
        <div class="results">
            <% if (currentPage > 1) { %>
                <a href="/livres?page=<%= currentPage - 1 %>">Précédent</a>
            <% } %>
        
            Page <%= currentPage %> sur <%= totalPages %>
        
            <% if (currentPage < totalPages) { %>
                <a href="/livres?page=<%= currentPage + 1 %>">Suivant</a>
            <% } %>
        </div>

        </div>
        

    </div>


</body>
</html>